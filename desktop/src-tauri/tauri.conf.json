{
  "$schema": "https://raw.githubusercontent.com/nicktomlin/tauri-v2-json-schema/refs/heads/main/schema.json",
  "productName": "PokePoke",
  "version": "0.1.0",
  "identifier": "com.pokepoke.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "title": "PokePoke - Autonomous Workflow Manager",
    "windows": [
      {
        "title": "PokePoke",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
